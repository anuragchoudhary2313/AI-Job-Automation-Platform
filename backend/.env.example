# API Settings
PROJECT_NAME=AI Job Automation SaaS
API_V1_STR=/api/v1
SECRET_KEY=change_this_to_a_secure_secret_key_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Database
# Use postgresql://user:password@host:port/db for production
# Use sqlite:///./sql_app.db for local dev
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app
SQLALCHEMY_DATABASE_URL=postgresql://postgres:postgres@localhost/app

# Security
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://localhost:8000"]

# OpenAI (AI Features)
# Leave empty to use fallback (templates/local NLP)
OPENAI_API_KEY=

# Email (SMTP)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=AI Job Automation Bot

# Rate Limiting
# Redis URL for rate limiting (optional, falls back to memory if not configured/available)
REDIS_URL=redis://localhost:6379/0

# File Uploads
MAX_UPLOAD_SIZE=5242880  # 5MB
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=INFO
